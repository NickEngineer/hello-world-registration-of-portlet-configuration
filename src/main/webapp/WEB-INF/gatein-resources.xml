<gatein-resources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_3 http://www.gatein.org/xml/ns/gatein_resources_1_3"
                  xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_3">

    <portlet>
        <name>HelloTest</name>
        <module>
            <script>
                <path>/js/portlet-action.js</path>
            </script>
            <depends>
                <module>jquery</module>
                <as>jqModule</as>
            </depends>
            <depends>
                <module>vue</module>
                <as>vueModule</as>
            </depends>
            <depends>
                <module>vuetify</module>
                <as>vuetifyModule</as>
            </depends>
            <depends>
                <module>eXoVueI18n</module>
                <as>eXoVueI18nModule</as>
            </depends>
        </module>
    </portlet>


    <portal-skin>
        <skin-name>Default</skin-name>
        <skin-module>customModuleVuetify</skin-module>
        <css-path>/../eXoSkin/skin/css/vuetify/vuetify-all.css</css-path>
        <css-priority>10</css-priority>
    </portal-skin>

    <portal-skin>
        <skin-name>Enterprise</skin-name>
        <skin-module>customModuleVuetify</skin-module>
        <css-path>/../EnterpriseSkin/skin/css/vuetify/vuetify-all.css</css-path>
        <css-priority>10</css-priority>
    </portal-skin>

    <portlet-skin>
        <application-name>hello-portlet-test</application-name>
        <portlet-name>HelloTest</portlet-name>
        <skin-name>Default</skin-name>
        <css-path>/skin/portlet-style.css</css-path>
        <overwrite>true</overwrite>
    </portlet-skin>

    <portlet-skin>
        <application-name>hello-portlet-test</application-name>
        <portlet-name>HelloTest</portlet-name>
        <skin-name>Enterprise</skin-name>
        <css-path>/skin/portlet-style.css</css-path>
        <overwrite>true</overwrite>
    </portlet-skin>


</gatein-resources>